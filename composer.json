{
    "name": "tsugi/lib",
    "description": "The PHP Library to build interoperable learning tools",
    "homepage": "http://www.tsugi.org/",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
    {
        "name": "csev",
        "email": "drchuck@gmail.com",
        "homepage": "http://www.dr-chuck.com/",
